%h2 Add meal
= simple_form_for(Meal.new, as: Meal.new, url: menu_meals_path) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, required: true, autofocus: true
    = f.input :course, collection: %w(starter main drink), required: true
    = f.input :price, required: true, as: :float
    = f.button :submit, 'Add meal'
